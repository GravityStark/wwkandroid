<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.werwolfkill.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:id="@+id/main_top"
        android:weightSum="1">

        <ImageView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/selfimg" />

        <TextView
            android:layout_weight="0.2"
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/selfname"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_center"
        android:weightSum="1">

        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/pl1"
            android:weightSum="1">

            <ImageView
                android:layout_weight="0.2"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p1"
                 />

            <ImageView
                android:layout_weight="0.20"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p2" />

            <ImageView
                android:layout_weight="0.20"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p3" />

            <ImageView
                android:layout_weight="0.20"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p4" />

            <ImageView
                android:layout_weight="0.20"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p5" />
        </LinearLayout>

        <ListView
            android:layout_weight="0.6"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/shape_gray_square_bg"
            android:padding="1dp"
            android:id="@+id/gmsg" />

        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/pl2"
            android:weightSum="1">

            <ImageView
                android:layout_weight="0.2"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p6"
                 />

            <ImageView
                android:layout_weight="0.2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p7" />

            <ImageView
                android:layout_weight="0.2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p8" />

            <ImageView
                android:layout_weight="0.2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p9" />

            <ImageView
                android:layout_weight="0.2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape_gray_square_bg"
                android:padding="1dp"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/p10" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
